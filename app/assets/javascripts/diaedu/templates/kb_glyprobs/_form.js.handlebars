<div class="errors">{{errors.base}}</div>

<div class="control-group">
  <label class="control-label" for="obj-evaluation">
    {{i18n diaedu.glyprobs.high_low}}
    <span class="errors">{{errors.evaluation}}</span>
  </label>
  <label class="radio inline">
    {{view Ember.RadioButton name="evaluation" selectionBinding="evaluation" value="high"}}
    {{i18n diaedu.evals.high}}
  </label>
  &nbsp;&nbsp;
  <label class="radio inline">
    {{view Ember.RadioButton name="evaluation" selectionBinding="evaluation" value="low"}}
    {{i18n diaedu.evals.low}}
  </label>
</div>

<div class="control-group">
  <label class="control-label" for="obj-event">
    {{i18n diaedu.glyprobs.event}}
    <span class="errors">{{errors.eventName}}</span>
  </label>
  <div class="controls">
    {{view Discourse.KbEventInputView}}
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="obj-description">
    {{i18n diaedu.description}}
    <span class="errors">{{errors.description}}</span>
  </label>
  <div class="controls">
    {{textarea id="obj-description" value=description class="obj-form"}}
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="obj-tags">
    {{i18n diaedu.tags.tags}}
    <span class="errors">{{errors.tags}}</span>
  </label>
  <div class="controls">
    {{view Discourse.KbTagEditView}}
  </div>
</div>