<div class="related-group">

  {{! add button}}
  {{#if currentUser}}
    <a {{action addRelatedObj}} class="new-related-obj">
      &plus;
      {{addLinkText}}
    </a>
  {{/if}}

  {{! header}}
  <h2>
    <img {{bindAttr src="dataType.iconPath"}} />
    {{heading}}
  </h2>

  {{! tag mini-filter}}
  {{render 'kb_mini_filter' tagFilter}}

  {{! object listing}}
  {{render 'kb_obj_page' objPage}}
</div>